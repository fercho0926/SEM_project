@model SEM_project.Models.Refer
@{
    ViewData["Title"] = "Referidos";

}




<!-- Input addon -->
<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">Referido</h3>
    </div>
    <div class="card-body">
        <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Mail" class="control-label"></label>
            <input asp-for="Mail" class="form-control" />
            <span asp-validation-for="Mail" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Enviar Invitación" class="btn btn-primary" />
        </div>
    </form>

    </div>
    <!-- /input-group -->
</div>
<!-- /.card-body -->



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }



