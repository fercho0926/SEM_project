@page
@model LoginModel

@{
    Layout = "_LayoutLogin";
}

<h1>@ViewData["Title"]</h1>
<div class="text-center">
</div>
<div>
    <div>
        <section>

            <form id="account" method="post" class="user">
                 <h2>Bienvenido!</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control form-control-user" autocomplete="username" aria-required="true" placeholder="Email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <br />

                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control form-control-user" autocomplete="current-password" aria-required="true" placeholder="Contraseña" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <br />
                <div>
                    <button id="login-submit" type="submit" class="btn btn-primary btn-user btn-block">Ingresar</button>
                </div>
            </form>
            <hr>
            <div class="text-center">
                <a id="forgot-password" asp-page="./ForgotPassword">Olvido su contraseña?</a>
            </div>
  
        </section>
    </div>

</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
